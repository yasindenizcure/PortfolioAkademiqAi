@model List<Message>
@{
    ViewData["Title"] = "Mesaj Merkezi";
    Layout = "~/Views/Admin/Index.cshtml";
}

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<style>
    footer, .footer, #footer {
        display: none !important;
    }

    body {
        background-color: #f5f5f7 !important;
        font-family: 'Inter', sans-serif;
    }

    .message-row {
        background: #ffffff;
        border-radius: 18px;
        margin-bottom: 12px;
        padding: 18px 25px;
        display: flex;
        align-items: center;
        gap: 20px;
        border: 1px solid rgba(229, 229, 231, 0.6);
        transition: 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        cursor: pointer;
        position: relative;
    }

        .message-row:hover {
            border-color: #007aff;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.04);
            transform: translateY(-2px);
        }

    .unread-style {
        background: #ffffff;
        box-shadow: inset 4px 0 0 0 #007aff, 0 4px 15px rgba(0, 122, 255, 0.08);
    }

        .unread-style .sender-name {
            font-weight: 800 !important;
            color: #1d1d1f !important;
        }

        .unread-style .msg-subject {
            font-weight: 700 !important;
            color: #1d1d1f !important;
        }

    .avatar-circle {
        width: 50px;
        height: 50px;
        border-radius: 50%;
        background: #f2f2f7;
        display: flex;
        align-items: center;
        justify-content: center;
        color: #007aff;
        font-weight: 700;
        font-size: 18px;
        flex-shrink: 0;
        transition: 0.3s;
    }

    .action-group {
        display: flex;
        gap: 10px;
        padding-left: 20px;
        border-left: 1px solid #f2f2f7;
    }

    .status-btn {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        border: 1px solid #f2f2f7;
        background: #fbfbfd;
        text-decoration: none;
        color: #86868b;
    }

        .status-btn:hover {
            background: #007aff;
            color: white !important;
            border-color: #007aff;
        }

    .status-active-unread {
        color: #007aff;
        background: rgba(0, 122, 255, 0.1);
        border-color: rgba(0, 122, 255, 0.1);
    }

    .delete-btn {
        width: 40px;
        height: 40px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: 0.2s;
        color: #ff3b30;
        background: rgba(255, 59, 48, 0.05);
        text-decoration: none;
    }

        .delete-btn:hover {
            background: #ff3b30;
            color: white !important;
        }
    .glass-modal {
        display: none;
        position: fixed;
        z-index: 10000;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background: rgba(0,0,0,0.3);
        backdrop-filter: blur(12px);
    }

    .modal-box {
        background: #ffffff;
        margin: 6% auto;
        border-radius: 30px;
        width: 650px;
        box-shadow: 0 40px 80px rgba(0,0,0,0.2);
        overflow: hidden;
        animation: appleReveal 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    @@keyframes appleReveal {
        from {
            opacity: 0;
            transform: scale(0.9) translateY(40px);
        }

        to {
            opacity: 1;
            transform: scale(1) translateY(0);
        }
    }
</style>

<div style="padding: 50px 40px; min-height: 100vh;">
    <div style="max-width: 1100px; margin: 0 auto;">

        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 40px;">
            <div>
                <h1 style="font-size: 38px; font-weight: 800; color: #1d1d1f; margin: 0; letter-spacing: -2px;">Gelen Kutusu</h1>
                <div style="display: flex; align-items: center; gap: 8px; margin-top: 8px;">
                    <div style="width: 10px; height: 10px; background: #34c759; border-radius: 50%; box-shadow: 0 0 8px #34c759;"></div>
                    <p style="color: #86868b; margin: 0; font-size: 16px; font-weight: 500;">İletişim Talepleri Paneli</p>
                </div>
            </div>
            <div style="background: white; padding: 15px 25px; border-radius: 20px; border: 1px solid #e5e5e7; text-align: center;">
                <div style="font-size: 24px; font-weight: 800; color: #007aff;">@Model.Count(x => x.IsRead != true)</div>
                <div style="font-size: 11px; font-weight: 700; color: #86868b; text-transform: uppercase; letter-spacing: 1px;">Okunmamış Mesaj</div>
            </div>
        </div>

        <div id="messageContainer">
            @foreach (var item in Model)
            {
                var isUnread = item.IsRead != true;
                <div class="message-row @(isUnread ? "unread-style" : "")">

                    <div class="avatar-circle" style="@(isUnread ? "background: #007aff; color: white;" : "")">
                        @(string.IsNullOrEmpty(item.SenderName) ? "?" : item.SenderName.Substring(0, 1).ToUpper())
                    </div>

                    <div style="flex: 1;" onclick="viewDetail('@item.SenderName', '@item.SenderEmail', '@item.MessageSubject', '@item.MessageText', '@(item.SendDate?.ToString("dd MMMM yyyy HH:mm") ?? "-")')">
                        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 5px;">
                            <span class="sender-name" style="font-size: 16px; color: @(isUnread ? "#1d1d1f" : "#86868b");">
                                @(item.SenderName ?? "İsimsiz Gönderici")
                            </span>
                            <span style="font-size: 13px; color: #86868b; font-weight: 500;">
                                @(item.SendDate?.ToString("HH:mm") ?? "") · @(item.SendDate?.ToString("dd/MM/yyyy") ?? "")
                            </span>
                        </div>
                        <div class="msg-subject" style="font-size: 17px; color: #1d1d1f; margin-bottom: 5px;">
                            @(item.MessageSubject ?? "(Konu Belirtilmemiş)")
                        </div>
                        <div style="font-size: 14px; color: #86868b; display: -webkit-box; -webkit-line-clamp: 1; -webkit-box-orient: vertical; overflow: hidden; line-height: 1.4;">
                            @item.MessageText
                        </div>
                    </div>

                    <div class="action-group">
                        <a href="/Contact/ChangeMessageStatus/@item.MessageId"
                           class="status-btn @(isUnread ? "status-active-unread" : "")"
                           title="@(isUnread ? "Okundu İşaretle" : "Okunmadı İşaretle")">
                            <span class="material-symbols-outlined">@(isUnread ? "drafts" : "mail")</span>
                        </a>
                        <a href="/Contact/DeleteMessage/@item.MessageId"
                           class="delete-btn"
                           onclick="return confirm('Bu mesaj kalıcı olarak silinecek. Emin misin?')"
                           title="Sil">
                            <span class="material-symbols-outlined">delete_outline</span>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div id="messageModal" class="glass-modal">
    <div class="modal-box">
        <div style="background: #f5f5f7; padding: 30px; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #e5e5e7;">
            <div style="display: flex; align-items: center; gap: 20px;">
                <div id="modalInitial" style="width: 60px; height: 60px; border-radius: 50%; background: #007aff; color: white; display: flex; align-items: center; justify-content: center; font-weight: 800; font-size: 24px;"></div>
                <div>
                    <h3 id="modalName" style="margin: 0; font-size: 22px; font-weight: 800; color: #1d1d1f;"></h3>
                    <p id="modalEmail" style="margin: 4px 0 0 0; font-size: 14px; color: #007aff; font-weight: 600;"></p>
                </div>
            </div>
            <button onclick="closeModal()" style="background: #e5e5ea; border: none; width: 36px; height: 36px; border-radius: 50%; cursor: pointer; font-size: 18px; color: #1d1d1f;">✕</button>
        </div>

        <div style="padding: 40px;">
            <div id="modalDate" style="font-size: 12px; color: #86868b; margin-bottom: 15px; text-transform: uppercase; letter-spacing: 1.5px; font-weight: 700;"></div>
            <h2 id="modalSubject" style="font-size: 26px; font-weight: 800; color: #1d1d1f; margin-bottom: 25px; line-height: 1.2;"></h2>
            <div id="modalText" style="font-size: 16px; color: #424245; line-height: 1.8; white-space: pre-wrap; background: #fbfbfd; padding: 25px; border-radius: 20px; border: 1px solid #f2f2f7; max-height: 350px; overflow-y: auto; box-shadow: inset 0 2px 10px rgba(0,0,0,0.02);"></div>
        </div>

        <div style="padding: 25px 40px; background: #f5f5f7; display: flex; justify-content: flex-end; border-top: 1px solid #e5e5e7;">
            <button onclick="closeModal()" style="padding: 14px 40px; background: #1d1d1f; color: white; border: none; border-radius: 16px; font-weight: 700; font-size: 15px; cursor: pointer; transition: 0.3s;" onmouseover="this.style.transform='scale(1.02)'" onmouseout="this.style.transform='scale(1)'">Kapat</button>
        </div>
    </div>
</div>



<script>
    function viewDetail(name, email, subject, text, date) {
        name = name || "İsimsiz Gönderici";
        email = email || "Email bulunamadı";
        subject = subject || "(Konu Yok)";
        text = text || "İçerik boş.";

        document.getElementById('modalName').innerText = name;
        document.getElementById('modalInitial').innerText = name.substring(0, 1).toUpperCase();
        document.getElementById('modalEmail').innerText = email;
        document.getElementById('modalSubject').innerText = subject;
        document.getElementById('modalText').innerText = text;
        document.getElementById('modalDate').innerText = date;
        document.getElementById('messageModal').style.display = 'block';
    }

    function closeModal() {
        document.getElementById('messageModal').style.display = 'none';
    }

    window.onclick = function(event) {
        let modal = document.getElementById('messageModal');
        if (event.target == modal) {
            closeModal();
        }
    }
</script>