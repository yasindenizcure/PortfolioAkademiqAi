@model List<Education>
@{
    ViewData["Title"] = "Eğitim Bilgilerim";
    Layout = "~/Views/Admin/Index.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">

<div style="padding: 40px; font-family: 'Inter', sans-serif; background-color: #f5f5f7; min-height: 100vh;">

    <div style="max-width: 1000px; margin: 0 auto 40px auto; display: flex; justify-content: space-between; align-items: flex-end;">
        <div>
            <h1 style="font-size: 32px; font-weight: 800; color: #1d1d1f; margin: 0; letter-spacing: -1.5px;">Eğitim Hayatım</h1>
            <p style="color: #86868b; margin-top: 8px; font-size: 16px;">Akademik geçmişini ve kurslarını buradan yönetebilirsin.</p>
        </div>
        <a href="/Education/CreateEducation" style="text-decoration: none; background: #5856d6; color: white; padding: 14px 28px; border-radius: 14px; font-weight: 600; font-size: 14px; transition: 0.3s; box-shadow: 0 4px 15px rgba(88,86,214,0.25);" onmouseover="this.style.background='#4341ac'" onmouseout="this.style.background='#5856d6'">
            + Yeni Eğitim Ekle
        </a>
    </div>

    <div style="max-width: 1000px; margin: 0 auto; display: flex; flex-direction: column; gap: 20px;">
        @foreach (var item in Model)
        {
            <div style="background: #ffffff; border-radius: 20px; padding: 25px; border: 1px solid #e5e5e7; display: flex; align-items: center; gap: 25px; transition: 0.3s;" onmouseover="this.style.transform='translateX(10px)'; this.style.borderColor='#5856d6';" onmouseout="this.style.transform='translateX(0)'; this.style.borderColor='#e5e5e7';">

                <div style="flex-shrink: 0; width: 65px; height: 65px; background: #f2f2f7; border-radius: 18px; display: flex; align-items: center; justify-content: center; color: #5856d6;">
                    <i class="fa-solid fa-graduation-cap" style="font-size: 26px;"></i>
                </div>

                <div style="flex-grow: 1;">
                    <div style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 5px;">
                        <h4 style="font-size: 19px; font-weight: 800; color: #1d1d1f; margin: 0;">@item.Title</h4>
                        <span style="font-size: 12px; font-weight: 700; color: #5856d6; background: #f5f5ff; padding: 4px 12px; border-radius: 8px; border: 1px solid rgba(88,86,214,0.1);">@item.Department</span>
                    </div>

                    <div style="display: flex; align-items: center; gap: 10px; margin-bottom: 8px;">
                        <span style="font-size: 14px; font-weight: 600; color: #86868b; display: flex; align-items: center; gap: 5px;">
                            <i class="fa-regular fa-calendar" style="font-size: 12px;"></i> @item.EducationDate
                        </span>
                    </div>
                </div>

                <div style="flex-shrink: 0; display: flex; flex-direction: column; gap: 10px; border-left: 1px solid #f2f2f7; padding-left: 20px;">
                    <a href="/Education/UpdateEducation/@item.EducationId" style="text-decoration: none; width: 100px; text-align: center; padding: 10px; background: #f2f2f7; color: #1d1d1f; border-radius: 10px; font-size: 13px; font-weight: 700; transition: 0.2s;" onmouseover="this.style.background='#e5e5e7'" onmouseout="this.style.background='#f2f2f7'">
                        Düzenle
                    </a>
                    <a href="/Education/DeleteEducation/@item.EducationId" onclick="return confirm('Bu eğitim kaydını silmek istediğine emin misin?')" style="text-decoration: none; width: 100px; text-align: center; padding: 10px; background: #fff1f0; color: #ff3b30; border-radius: 10px; font-size: 13px; font-weight: 700; transition: 0.2s;" onmouseover="this.style.background='#ffccc7'" onmouseout="this.style.background='#fff1f0'">
                        Sil
                    </a>
                </div>
            </div>
        }
    </div>
</div>