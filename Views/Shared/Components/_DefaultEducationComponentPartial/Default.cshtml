@using AkademiQPortfolio.Entities
@model List<Education>

<section id="section5" style="padding: 100px 0; background-color: #ffffff; font-family: 'Inter', -apple-system, sans-serif;">
    <div class="container">

        <h2 style="font-size: 36px; font-weight: 900; color: #1d1d1f; margin-bottom: 60px; text-align: center; letter-spacing: -1.5px;">Eğitim Hayatım</h2>

        <div style="max-width: 800px; margin: 0 auto; position: relative; padding-left: 30px; margin-bottom: 100px;">
            <div style="position: absolute; left: 0; top: 10px; bottom: 10px; width: 2px; background: linear-gradient(to bottom, #007aff, #5856d6); border-radius: 2px;"></div>

            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <div style="position: relative; margin-bottom: 45px; padding-left: 30px;">
                        <div style="position: absolute; left: -36px; top: 5px; width: 14px; height: 14px; background: #fff; border: 3px solid #007aff; border-radius: 50%; z-index: 2;"></div>

                        <div style="display: flex; justify-content: space-between; align-items: flex-start; flex-wrap: wrap; gap: 10px;">
                            <div>
                                <span style="font-size: 13px; color: #86868b; font-weight: 600; text-transform: uppercase; letter-spacing: 0.5px;">@item.Title</span>
                                <h4 style="font-size: 20px; font-weight: 800; color: #1d1d1f; margin: 5px 0;">@item.Department</h4>
                            </div>
                            <span style="background: #f2f2f7; color: #1d1d1f; padding: 6px 16px; border-radius: 20px; font-size: 12px; font-weight: 700; white-space: nowrap;">@item.EducationDate</span>
                        </div>
                    </div>
                }
            }
        </div>

        <div style="height: 60px;"></div>

        <h2 style="font-size: 36px; font-weight: 900; color: #1d1d1f; margin-bottom: 60px; text-align: center; letter-spacing: -1.5px;">Hobiler ve İlgi Alanları</h2>

        <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 25px; max-width: 1100px; margin: 0 auto;">

            @if (ViewBag.Hobbies != null)
            {
                foreach (var hobi in (List<Hobby>)ViewBag.Hobbies)
                {
                    <div style="width: 160px; background: #fff; padding: 30px 20px; border-radius: 24px; box-shadow: 0 4px 20px rgba(0,0,0,0.04); border: 1px solid #f2f2f7; text-align: center; transition: 0.3s;"
                         onmouseover="this.style.transform='translateY(-8px)'; this.style.borderColor='#007aff'; this.style.boxShadow='0 10px 25px rgba(0,0,0,0.08)';"
                         onmouseout="this.style.transform='translateY(0)'; this.style.borderColor='#f2f2f7'; this.style.boxShadow='0 4px 20px rgba(0,0,0,0.04)';">

                        <div style="width: 50px; height: 50px; background: #fbfbfd; border-radius: 15px; display: flex; align-items: center; justify-content: center; margin: 0 auto 15px;">
                            @if (!string.IsNullOrEmpty(hobi.IconUrl))
                            {
                                <img src="@hobi.IconUrl" style="width: 26px; height: 26px; object-fit: contain;"
                                     onerror="this.style.display='none'; this.nextElementSibling.style.display='block';" />

                                <svg style="width: 24px; height: 24px; fill: #007aff; display: none;" viewBox="0 0 24 24">
                                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 14.5v-9l6 4.5-6 4.5z" />
                                </svg>
                            }
                        </div>

                        <h6 style="font-size: 13px; font-weight: 700; color: #1d1d1f; margin: 0; text-transform: uppercase; letter-spacing: 0.5px;">@hobi.Title</h6>
                    </div>
                }
            }
            else
            {
                <p style="color: #86868b; font-size: 14px;">Henüz hobi bilgisi eklenmemiş.</p>
            }
        </div>
    </div>
</section>