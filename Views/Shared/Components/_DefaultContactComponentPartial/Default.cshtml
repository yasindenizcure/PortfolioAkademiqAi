@model Contact
<section id="section8" style="padding: 100px 0; background-color: #fbfbfd; font-family: 'Inter', sans-serif;">
    <div class="container">
        <h2 style="font-size: 36px; font-weight: 900; color: #1d1d1f; margin-bottom: 60px; text-align: center; letter-spacing: -1.5px;">Bana Ulaşın!</h2>

        <div class="row">
            <div class="col-sm-5" style="margin-bottom: 40px;">
                <h5 style="font-size: 18px; font-weight: 800; color: #1d1d1f; margin-bottom: 25px; text-transform: uppercase; letter-spacing: 1px;">İletişim Adresi</h5>
                <ul class="list-unstyled" style="color: #64748b; line-height: 2;">
					@if (Model != null)
                    {
                        <li style="display: flex; gap: 12px; margin-bottom: 15px;">
                            <svg style="width: 20px; height: 20px; fill: #2563eb;" viewBox="0 0 24 24"><path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" /></svg>
                            @Model.Address
                        </li>

                        <li style="display: flex; gap: 12px; margin-bottom: 15px;">
                            <svg style="width: 20px; height: 20px; fill: #10b981;" viewBox="0 0 24 24"><path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" /></svg>
                        @Model.Phone
                        </li>
                        <li style="display: flex; gap: 12px; margin-bottom: 15px;">
                            <svg style="width: 20px; height: 20px; fill: #f43f5e;" viewBox="0 0 24 24"><path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z" /></svg>
                        <a href="mailto:@Model.Email" style="color: #64748b; text-decoration: none;">yasindenizcure@gmail.com</a>
                        </li>
                    }
                </ul>
                </div>
            <div class="col-sm-7">
                <div style="background: white; padding: 40px; border-radius: 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.03); border: 1px solid #f2f2f7;">
                    <h5 style="font-size: 18px; font-weight: 800; color: #1d1d1f; margin-bottom: 30px; text-transform: uppercase; letter-spacing: 1px;">İletişim Formu</h5>

                    <form action="/Contact/SendMessage" method="post" class="contact-form">
                        <input type="hidden" name="MessageDate" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" />

                        <div class="row">
                            <div class="col-sm-6" style="margin-bottom: 20px;">
                                <label style="font-size: 13px; font-weight: 700; color: #1d1d1f; display: block; margin-bottom: 8px;">Adınız</label>
                                <input type="text" name="SenderName" style="width: 100%; padding: 12px 15px; border-radius: 12px; border: 1px solid #e5e5e7; background: #fbfbfd; outline: none; transition: 0.3s;" placeholder="Ad Soyad" required />
                            </div>
                            <div class="col-sm-6" style="margin-bottom: 20px;">
                                <label style="font-size: 13px; font-weight: 700; color: #1d1d1f; display: block; margin-bottom: 8px;">E-posta</label>
                                <input type="email" name="SenderEmail" style="width: 100%; padding: 12px 15px; border-radius: 12px; border: 1px solid #e5e5e7; background: #fbfbfd; outline: none;" placeholder="email@adresiniz.com" required />
                            </div>
                        </div>

                        <div style="margin-bottom: 20px;">
                            <label style="font-size: 13px; font-weight: 700; color: #1d1d1f; display: block; margin-bottom: 8px;">Konu Seçin</label>

                            <select name="MessageSubject" required style="width: 100%; padding: 12px 15px; border-radius: 12px; border: 1px solid #e5e5e7; background: #fbfbfd; color: #64748b; appearance: none; cursor: pointer; outline: none;">

                                <option value="" disabled selected>Lütfen bir konu seçin</option>

                                <option value="Proje Teklifi">Proje Teklifi</option>
                                <option value="İş Birliği">İş Birliği</option>
                                <option value="Eğitim / Kurumsal Eğitim Talebi">Eğitim / Kurumsal Eğitim Talebi</option>
                                <option value="Web / API Geliştirme Talebi">Web / API Geliştirme Talebi</option>
                                <option value="Teknik Destek / Danışmanlık">Teknik Destek / Danışmanlık</option>
                                <option value="Diğer">Diğer</option>
                            </select>
                        </div>

                        <div style="margin-bottom: 30px;">
                            <label style="font-size: 13px; font-weight: 700; color: #1d1d1f; display: block; margin-bottom: 8px;">Mesajınız</label>
                            <textarea name="MessageText" rows="4" style="width: 100%; padding: 12px 15px; border-radius: 12px; border: 1px solid #e5e5e7; background: #fbfbfd; outline: none; resize: none;" placeholder="Mesajınızı buraya yazın..."></textarea>
                        </div>

                        <button type="submit" style="width: 100%; padding: 16px; background: #2563eb; color: #fff; border: none; border-radius: 15px; font-weight: 800; font-size: 15px; cursor: pointer; transition: 0.3s; box-shadow: 0 10px 20px -5px rgba(37, 99, 235, 0.3);" onmouseover="this.style.background='#1d4ed8'; this.style.transform='translateY(-2px)';" onmouseout="this.style.background='#2563eb'; this.style.transform='translateY(0)';">
                            Mesajı Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>