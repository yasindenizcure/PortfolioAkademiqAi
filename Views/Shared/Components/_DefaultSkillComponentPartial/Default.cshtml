@model List<Skill>

@{
    var colorPalette = new[] { "#007aff", "#34c759", "#ff9500", "#ff2d55", "#5856d6", "#af52de", "#5ac8fa", "#ff3b30" };
    int colorIndex = 0;
}

<section id="section3" style="padding: 90px 0; background-color: #fbfbfd; font-family: 'Inter', sans-serif;">
    <div class="container">
        <h2 style="font-size: 34px; font-weight: 800; color: #1d1d1f; margin-bottom: 60px; text-align: center; letter-spacing: -1px;">Yeteneklerim</h2>

        <div class="row" style="display: flex; flex-wrap: wrap; gap: 30px;">

            <div class="col-sm-6" style="flex: 1; min-width: 320px; background: #fff; padding: 40px; border-radius: 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.03); border: 1px solid #f2f2f7;">
                <h4 style="font-size: 18px; font-weight: 700; color: #1d1d1f; margin-bottom: 35px; display: flex; align-items: center; gap: 12px;">
                    <span style="width: 10px; height: 10px; background: #007aff; border-radius: 50%;"></span> Teknik Yetkinlikler
                </h4>

                @if (Model != null)
                {
                    @foreach (var item in Model)
                    {
                        var currentColor = colorPalette[colorIndex % colorPalette.Length];
                        colorIndex++;

                        <div style="margin-bottom: 25px;">
                            <div style="display: flex; justify-content: space-between; margin-bottom: 8px;">
                                <label style="font-size: 14px; font-weight: 600; color: #1d1d1f;">@item.SkillTitle</label>
                                <span style="font-size: 13px; font-weight: 800; color: @currentColor;">%@item.SkillValue</span>
                            </div>
                            <div style="width: 100%; height: 8px; background: #f2f2f7; border-radius: 10px; overflow: hidden;">
                                <div style="width: @item.SkillValue%; height: 100%; background: @currentColor; border-radius: 10px; transition: width 1.5s cubic-bezier(0.1, 0, 0.2, 1); box-shadow: 0 0 10px @(currentColor + "44");"></div>
                            </div>
                        </div>
                    }
                }
            </div>

            <div class="col-sm-6" style="flex: 1; min-width: 320px; background: #fff; padding: 40px; border-radius: 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.03); border: 1px solid #f2f2f7;">
                <h4 style="font-size: 18px; font-weight: 700; color: #1d1d1f; margin-bottom: 35px; display: flex; align-items: center; gap: 12px;">
                    <span style="width: 10px; height: 10px; background: #34c759; border-radius: 50%;"></span> Bilgi Alanları
                </h4>

                <div style="display: flex; flex-wrap: wrap; gap: 12px;">
                    @{
                        int badgeColorIndex = 0;
                    }
                    @foreach (var area in new[] { "ASP.NET Core", "Entity Framework", "Web API", "SQL Server", "Clean Architecture", "OOP", "Microservices",})
                    {
                        var bColor = colorPalette[badgeColorIndex % colorPalette.Length];
                        badgeColorIndex++;

                        <span style="background: #fbfbfd; color: #424245; padding: 10px 20px; border-radius: 14px; font-size: 13px; font-weight: 600; border: 1px solid #e5e5e7; transition: 0.3s; cursor: default;"
                              onmouseover="this.style.borderColor='@bColor'; this.style.color='@bColor'; this.style.transform='translateY(-2px)';"
                              onmouseout="this.style.borderColor='#e5e5e7'; this.style.color='#424245'; this.style.transform='translateY(0)';">
                            @area
                        </span>
                    }
                </div>
            </div>

        </div>
    </div>
</section>