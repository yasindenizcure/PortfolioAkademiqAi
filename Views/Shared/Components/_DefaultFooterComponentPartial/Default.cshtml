@model List<Contact>

<footer class="footer" style="background: #1d1d1f; color: #f5f5f7; padding: 60px 0 30px 0; font-family: 'Inter', sans-serif;">
    <div class="top">
        <div class="container">
            <div class="row" style="display: flex; flex-wrap: wrap; gap: 40px; justify-content: space-between; align-items: flex-start;">

                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model)
                    {
                        <div style="flex: 1; min-width: 200px;">
                            <h4 style="color: #fff; font-weight: 800; text-transform: uppercase; margin-bottom: 25px; font-size: 13px; letter-spacing: 1.5px; border-left: 3px solid #007aff; padding-left: 10px;">ADRES</h4>
                            <p style="color: #86868b; line-height: 1.8; font-size: 15px; margin: 0;">
                                @item.Address
                            </p>
                        </div>

                        <div style="flex: 1; min-width: 200px;">
                            <h4 style="color: #fff; font-weight: 800; text-transform: uppercase; margin-bottom: 25px; font-size: 13px; letter-spacing: 1.5px; border-left: 3px solid #34c759; padding-left: 10px;">ILETISIM</h4>
                            <p style="color: #86868b; line-height: 1.8; font-size: 15px; margin: 0;">
                                <strong style="color: #d2d2d7;">Tel:</strong> @item.Phone <br />
                                <strong style="color: #d2d2d7;">Mail:</strong> @item.Email
                            </p>
                        </div>
                    }
                }

                <div style="flex: 1; min-width: 250px;">
                    <h4 style="color: #fff; font-weight: 800; text-transform: uppercase; margin-bottom: 25px; font-size: 13px; letter-spacing: 1.5px; border-left: 3px solid #ff3b30; padding-left: 10px;">SOSYAL MEDYA</h4>
                    <div class="social-icons" style="display: flex; gap: 15px;">

                        <a href="https://x.com/altercure" style="width: 50px; height: 50px; display: flex; align-items: center; justify-content: center; background: #2c2c2e; border-radius: 14px; transition: 0.4s;"
                           onmouseover="this.style.background='#000'; this.style.transform='translateY(-5px)';"
                           onmouseout="this.style.background='#2c2c2e'; this.style.transform='translateY(0)';">
