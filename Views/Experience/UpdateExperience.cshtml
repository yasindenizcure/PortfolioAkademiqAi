@model Experience
@{
    ViewData["Title"] = "Deneyim Güncelle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    footer, .footer, .bottom-widgets, #footer {
        display: none !important;
    }

    body {
        background-color: #f5f5f7 !important;
    }

    .update-container {
        display: flex;
        gap: 30px;
        max-width: 1100px;
        margin: 0 auto;
        padding-top: 20px;
    }

    .preview-side {
        flex: 1;
        background: linear-gradient(135deg, #1d1d1f 0%, #424245 100%);
        border-radius: 24px;
        padding: 30px;
        color: white;
        height: fit-content;
        position: sticky;
        top: 20px;
    }

    .form-side {
        flex: 2;
        background: #ffffff;
        border-radius: 24px;
        padding: 35px;
        border: 1px solid #e5e5e7;
        box-shadow: 0 4px 20px rgba(0,0,0,0.02);
    }

    .input-style {
        width: 100%;
        padding: 12px 16px;
        border-radius: 12px;
        border: 1px solid #d2d2d7;
        background: #fbfbfd;
        color: #1d1d1f;
        outline: none;
        font-size: 14px;
        transition: 0.3s;
        margin-top: 8px;
    }

        .input-style:focus {
            border-color: #007aff;
            background: #fff;
            box-shadow: 0 0 0 4px rgba(0,122,255,0.1);
        }
</style>

<div style="padding: 30px; font-family: 'Inter', sans-serif;">

    <div style="max-width: 1100px; margin: 0 auto 20px auto;">
        <a href="/Experience/ExperienceList" style="text-decoration: none; color: #007aff; font-size: 14px; font-weight: 600; display: inline-flex; align-items: center; gap: 5px;">
            <span class="material-symbols-outlined" style="font-size: 18px;">arrow_back</span> Listeye Geri Dön
        </a>
    </div>

    <div class="update-container">

        <div class="preview-side">
            <div style="display: flex; align-items: center; gap: 15px; margin-bottom: 25px;">
                <div style="width: 50px; height: 50px; background: rgba(255,255,255,0.1); border-radius: 12px; display: flex; align-items: center; justify-content: center;">
                    <i class="@Model.IconUrl" style="font-size: 24px; color: #007aff;"></i>
                </div>
                <div>
                    <h3 style="margin: 0; font-size: 18px;">Şu Anki Veri</h3>
                    <span style="font-size: 12px; opacity: 0.7;">Değişiklikleri sağdan yapın</span>
                </div>
            </div>

            <div style="border-left: 2px solid #007aff; padding-left: 20px; margin-bottom: 20px;">
                <h4 style="margin: 0; font-size: 16px; color: #007aff;">@Model.Title</h4>
                <p style="margin: 5px 0; font-size: 14px; font-weight: 500;">@Model.CompanyName</p>
                <small style="opacity: 0.6;">@Model.WorkDate</small>
            </div>

            <p style="font-size: 13px; line-height: 1.6; opacity: 0.8; font-style: italic;">
                "@Model.Description"
            </p>
        </div>

        <div class="form-side">
            <h2 style="font-size: 24px; font-weight: 800; color: #1d1d1f; margin: 0 0 30px 0; letter-spacing: -0.5px;">Deneyimi Düzenle</h2>

            <form action="/Experience/UpdateExperience" method="post">
                @Html.HiddenFor(x => x.ExperienceId) <div class="row">
                    <div class="col-sm-6" style="margin-bottom: 20px;">
                        <label style="font-size: 13px; font-weight: 700; color: #424245;">Şirket Adı</label>
                        <input type="text" name="CompanyName" value="@Model.CompanyName" class="input-style" required />
                    </div>

                    <div class="col-sm-6" style="margin-bottom: 20px;">
                        <label style="font-size: 13px; font-weight: 700; color: #424245;">Pozisyon / Ünvan</label>
                        <input type="text" name="Title" value="@Model.Title" class="input-style" required />
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6" style="margin-bottom: 20px;">
                        <label style="font-size: 13px; font-weight: 700; color: #424245;">Çalışma Dönemi</label>
                        <input type="text" name="WorkDate" value="@Model.WorkDate" class="input-style" required />
                    </div>

                    <div class="col-sm-6" style="margin-bottom: 20px;">
                        <label style="font-size: 13px; font-weight: 700; color: #424245;">İkon Kodu</label>
                        <input type="text" name="IconUrl" value="@Model.IconUrl" class="input-style" required />
                    </div>
                </div>

                <div style="margin-bottom: 30px;">
                    <label style="font-size: 13px; font-weight: 700; color: #424245;">İş Tanımı Detayları</label>
                    <textarea name="Description" rows="4" class="input-style" style="resize: none;" required>@Model.Description</textarea>
                </div>

                <div style="display: flex; gap: 15px;">
                    <button type="submit" style="flex: 2; padding: 14px; background: #34c759; color: white; border: none; border-radius: 12px; font-weight: 700; font-size: 15px; cursor: pointer; transition: 0.3s; box-shadow: 0 4px 12px rgba(52,199,89,0.2);">
                        Değişiklikleri Uygula
                    </button>
                    <a href="/Experience/ExperienceList" style="flex: 1; text-align: center; text-decoration: none; padding: 14px; background: #f2f2f7; color: #1d1d1f; border: none; border-radius: 12px; font-weight: 600; font-size: 15px; transition: 0.3s;">
                        Vazgeç
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>