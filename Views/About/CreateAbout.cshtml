@model About
@{
    ViewData["Title"] = "Profil Oluştur";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    footer, .footer, .bottom-widgets, #footer {
        display: none !important;
    }

    body {
        background-color: #f5f5f7 !important;
    }

    .form-label {
        display: block;
        font-size: 13px;
        font-weight: 700;
        color: #86868b;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-input {
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: 1px solid #d2d2d7;
        background: #ffffff;
        color: #1d1d1f;
        outline: none;
        transition: 0.3s;
        font-size: 15px;
        margin-bottom: 20px;
    }

        .form-input:focus {
            border-color: #007aff;
            box-shadow: 0 0 0 4px rgba(0, 122, 255, 0.1);
        }

    .btn-save {
        flex: 2;
        padding: 16px;
        background: #007aff;
        color: white;
        border: none;
        border-radius: 16px;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: 0.3s;
        box-shadow: 0 4px 12px rgba(0,122,255,0.2);
    }

    .btn-reset {
        flex: 1;
        padding: 16px;
        background: #e5e5ea;
        color: #1d1d1f;
        border: 1px solid #d1d1d6;
        border-radius: 16px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
    }
</style>

<div style="padding: 40px; font-family: 'Inter', sans-serif;">
    <div style="max-width: 800px; margin: 0 auto;">

        <div style="margin-bottom: 35px;">
            <a href="/About/Index" style="text-decoration: none; color: #007aff; font-size: 14px; font-weight: 600; display: inline-flex; align-items: center; gap: 5px; margin-bottom: 10px;">
                <span class="material-symbols-outlined" style="font-size: 18px;">arrow_back</span> Profil Paneli
            </a>
            <h1 style="font-size: 32px; font-weight: 800; color: #1d1d1f; letter-spacing: -1.2px;">Profilini Oluştur</h1>
        </div>

        <form action="/About/CreateAbout" method="post">

            <div style="display: flex; gap: 20px;">
                <div style="flex: 1;">
                    <label class="form-label">Ad Soyad</label>
                    <input type="text" name="NameSurname" placeholder="Örn: Ahmet Yılmaz" class="form-input" required />
                </div>
                <div style="flex: 1;">
                    <label class="form-label">Ünvan</label>
                    <input type="text" name="Title" placeholder="Örn: Full Stack Developer" class="form-input" required />
                </div>
            </div>

            <div style="display: flex; gap: 20px;">
                <div style="flex: 1;">
                    <label class="form-label">E-Posta</label>
                    <input type="email" name="Email" placeholder="ahmet@mail.com" class="form-input" required />
                </div>
                <div style="flex: 1;">
                    <label class="form-label">Telefon</label>
                    <input type="text" name="Phone" placeholder="05XX XXX XX XX" class="form-input" required />
                </div>
            </div>

            <div>
                <label class="form-label">Adres</label>
                <input type="text" name="Address" placeholder="Şehir, Ülke veya Tam Adres" class="form-input" required />
            </div>

            <div>
                <label class="form-label">Profil Fotoğraf URL</label>
                <input type="text" name="ImageUrl" placeholder="https://resimlinki.com/profil.jpg" class="form-input" required />
            </div>

            <div>
                <label class="form-label">Biyografi (Description)</label>
                <textarea name="Description" placeholder="Kendinden kısaca bahset..." class="form-input" style="height: 120px; resize: none;" required></textarea>
            </div>

            <div style="display: flex; gap: 15px; margin-top: 10px;">
                <button type="submit" class="btn-save" onmouseover="this.style.background='#005bb5'" onmouseout="this.style.background='#007aff'">
                    Bilgileri Kaydet
                </button>
                <button type="reset" class="btn-reset" onmouseover="this.style.background='#d1d1d6'" onmouseout="this.style.background='#e5e5ea'">
                    Temizle
                </button>
            </div>
        </form>

        <div style="height: 100px;"></div>
    </div>
</div>