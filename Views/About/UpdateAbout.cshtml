@model About
@{
    ViewData["Title"] = "Profili Düzenle";
    Layout = "~/Views/Admin/Index.cshtml";
}

<style>
    footer, .footer, .bottom-widgets, #footer {
        display: none !important;
    }

    body {
        background-color: #f5f5f7 !important;
        font-family: 'Inter', sans-serif;
    }

    .update-wrapper {
        display: flex;
        gap: 40px;
        max-width: 1100px;
        margin: 0 auto;
    }

    .profile-preview {
        flex: 1;
        background: #ffffff;
        border-radius: 28px;
        padding: 40px 30px;
        border: 1px solid #e5e5e7;
        text-align: center;
        height: fit-content;
        position: sticky;
        top: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.03);
    }

    .preview-img {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        object-fit: cover;
        margin-bottom: 20px;
        border: 4px solid #f2f2f7;
    }

    .form-container {
        flex: 1.8;
    }

    .form-label {
        display: block;
        font-size: 13px;
        font-weight: 700;
        color: #86868b;
        margin-bottom: 8px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .form-input {
        width: 100%;
        padding: 14px;
        border-radius: 12px;
        border: 1px solid #d2d2d7;
        background: #ffffff;
        color: #1d1d1f;
        outline: none;
        transition: 0.3s;
        font-size: 15px;
        margin-bottom: 20px;
    }

        .form-input:focus {
            border-color: #007aff;
            box-shadow: 0 0 0 4px rgba(0, 122, 255, 0.1);
        }

    .btn-update {
        flex: 2;
        padding: 16px;
        background: #007aff;
        color: white;
        border: none;
        border-radius: 16px;
        font-weight: 700;
        font-size: 15px;
        cursor: pointer;
        transition: 0.3s;
    }

    .btn-back {
        flex: 1;
        padding: 16px;
        background: #e5e5ea;
        color: #1d1d1f;
        border: 1px solid #d1d1d6;
        border-radius: 16px;
        font-weight: 600;
        text-decoration: none;
        text-align: center;
        font-size: 15px;
    }
</style>

<div style="padding: 40px;">

    <div style="max-width: 1100px; margin: 0 auto 30px auto;">
        <a href="/About/Index" style="text-decoration: none; color: #007aff; font-size: 14px; font-weight: 600; display: inline-flex; align-items: center; gap: 5px; margin-bottom: 10px;">
            <span class="material-symbols-outlined" style="font-size: 18px;">arrow_back</span> Profil Paneli
        </a>
        <h1 style="font-size: 32px; font-weight: 800; color: #1d1d1f; letter-spacing: -1.2px;">Profil Bilgilerini Güncelle</h1>
    </div>

    <div class="update-wrapper">

        <div class="profile-preview">
            <img src="@Model.ImageUrl" id="pImg" class="preview-img" onerror="this.src='https://ui-avatars.com/api/?name=@Model.NameSurname&background=007aff&color=fff&size=256';" />
            <h3 id="pName" style="margin: 0; font-size: 22px; font-weight: 800;">@Model.NameSurname</h3>
            <p id="pTitle" style="color: #007aff; font-size: 14px; font-weight: 700; text-transform: uppercase; margin: 8px 0 0 0;">@Model.Title</p>

            <div style="margin-top: 25px; text-align: left; background: #fbfbfd; padding: 15px; border-radius: 15px; border: 1px solid #f2f2f7;">
                <div style="font-size: 12px; color: #86868b; margin-bottom: 5px;">📍 @Model.Address</div>
                <div style="font-size: 12px; color: #86868b;">📧 @Model.Email</div>
            </div>
        </div>

        <div class="form-container">
            <form action="/About/UpdateAbout" method="post">
                @Html.HiddenFor(x => x.AboutId)

                <div style="display: flex; gap: 20px;">
                    <div style="flex: 1;">
                        <label class="form-label">Ad Soyad</label>
                        <input type="text" name="NameSurname" value="@Model.NameSurname" id="iName" class="form-input" required />
                    </div>
                    <div style="flex: 1;">
                        <label class="form-label">Unvan</label>
                        <input type="text" name="Title" value="@Model.Title" id="iTitle" class="form-input" required />
                    </div>
                </div>

                <div style="display: flex; gap: 20px;">
                    <div style="flex: 1;">
                        <label class="form-label">Telefon</label>
                        <input type="text" name="Phone" value="@Model.Phone" class="form-input" required />
                    </div>
                    <div style="flex: 1;">
                        <label class="form-label">E-Posta</label>
                        <input type="email" name="Email" value="@Model.Email" class="form-input" required />
                    </div>
                </div>

                <div>
                    <label class="form-label">Adres</label>
                    <input type="text" name="Address" value="@Model.Address" class="form-input" required />
                </div>

                <div>
                    <label class="form-label">Profil Görsel URL</label>
                    <input type="text" name="ImageUrl" value="@Model.ImageUrl" id="iImg" class="form-input" required />
                </div>

                <div>
                    <label class="form-label">Biyografi (Description)</label>
                    <textarea name="Description" class="form-input" style="height: 120px; resize: none;" required>@Model.Description</textarea>
                </div>

                <div style="display: flex; gap: 15px; margin-top: 10px;">
                    <button type="submit" class="btn-update" onmouseover="this.style.background='#005bb5'" onmouseout="this.style.background='#007aff'">
                        Değişiklikleri Uygula
                    </button>
                    <a href="/About/Index" class="btn-back">Vazgeç</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const iName = document.getElementById('iName');
    const iTitle = document.getElementById('iTitle');
    const iImg = document.getElementById('iImg');

    const pName = document.getElementById('pName');
    const pTitle = document.getElementById('pTitle');
    const pImg = document.getElementById('pImg');

    iName.addEventListener('input', (e) => pName.innerText = e.target.value || "İsim Soyisim");
    iTitle.addEventListener('input', (e) => pTitle.innerText = e.target.value || "Ünvan");
    iImg.addEventListener('input', (e) => pImg.src = e.target.value);
</script>