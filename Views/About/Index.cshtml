@model List<AkademiQPortfolio.Entities.About>
@{
    ViewData["Title"] = "Profil Bilgilerim";
    Layout = "~/Views/Admin/Index.cshtml";
    bool hasProfile = Model != null && Model.Any();
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">

<style>
    footer, .footer, .bottom-widgets, #footer {
        display: none !important;
    }

    body {
        background-color: #f5f5f7 !important;
        font-family: 'Inter', sans-serif;
    }
    .btn-apple-primary {
        display: inline-flex !important;
        background-color: #007aff !important;
        color: #ffffff !important;
        padding: 12px 24px !important;
        border-radius: 12px !important;
        font-weight: 700 !important;
        text-decoration: none !important;
        transition: 0.3s;
        box-shadow: 0 4px 15px rgba(0,122,255,0.3);
        align-items: center;
        gap: 8px;
        border: none;
        cursor: pointer;
    }

        .btn-apple-primary:hover {
            background-color: #005bb5 !important;
            transform: translateY(-2px);
        }

    .about-card {
        background: #ffffff;
        border-radius: 28px;
        padding: 40px;
        border: 1px solid #e5e5e7;
        display: flex;
        gap: 40px;
        box-shadow: 0 10px 40px rgba(0,0,0,0.03);
    }

    .info-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        background: #fbfbfd;
        padding: 20px;
        border-radius: 20px;
        border: 1px solid #f2f2f7;
        margin-top: 20px;
    }

    .info-label {
        display: block;
        font-size: 11px;
        font-weight: 700;
        color: #86868b;
        text-transform: uppercase;
        margin-bottom: 5px;
    }

    .info-value {
        font-size: 14px;
        color: #1d1d1f;
        font-weight: 600;
    }
</style>

<div style="padding: 40px;">

    <div style="max-width: 1000px; margin: 0 auto 40px auto; display: flex; justify-content: space-between; align-items: center;">
        <div>
            <h1 style="font-size: 32px; font-weight: 800; color: #1d1d1f; margin: 0; letter-spacing: -1.5px;">Hakkımda Bilgileri</h1>
            <p style="color: #86868b; margin-top: 5px;">Profilini ve iletişim detaylarını yönet.</p>
        </div>

        <a href="javascript:void(0);" onclick="handleCreateClick()" class="btn-apple-primary">
            <i class="fa-solid fa-plus"></i> Yeni Profil Ekle
        </a>
    </div>

    <div style="max-width: 1000px; margin: 0 auto;">

        @if (!hasProfile)
        {
            <div style="text-align: center; padding: 60px; background: white; border-radius: 28px; border: 2px dashed #d2d2d7;">
                <i class="fa-solid fa-user-slash" style="font-size: 50px; color: #d2d2d7; margin-bottom: 20px;"></i>
                <h3 style="color: #1d1d1f; font-weight: 700;">Profil Henüz Oluşturulmadı</h3>
                <p style="color: #86868b; margin-bottom: 25px;">Sitede görünmesi için hemen bir kayıt oluştur.</p>
                <a href="/About/CreateAbout" class="btn-apple-primary">Hemen Başla</a>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="about-card">
                    <div style="flex-shrink: 0;">
                        <div style="width: 220px; height: 220px; border-radius: 24px; overflow: hidden; border: 1px solid #f2f2f7;">
                            <img src="@item.ImageUrl" alt="Profil" style="width: 100%; height: 100%; object-fit: cover;"
                                 onerror="this.src='https://ui-avatars.com/api/?name=@item.NameSurname&background=007aff&color=fff&size=256';">
                        </div>
                    </div>

                    <div style="flex-grow: 1;">
                        <span style="font-size: 11px; font-weight: 800; color: #007aff; text-transform: uppercase; letter-spacing: 1px; background: rgba(0,122,255,0.08); padding: 5px 12px; border-radius: 6px;">@item.Title</span>
                        <h2 style="font-size: 36px; font-weight: 800; color: #1d1d1f; margin: 15px 0 10px 0;">@item.NameSurname</h2>

                        <p style="font-size: 15px; line-height: 1.6; color: #424245; margin-bottom: 20px;">@item.Description</p>

                        <div class="info-grid">
                            <div><span class="info-label">Telefon</span><div class="info-value">@item.Phone</div></div>
                            <div><span class="info-label">E-Posta</span><div class="info-value">@item.Email</div></div>
                            <div style="grid-column: span 2;"><span class="info-label">Adres</span><div class="info-value">@item.Address</div></div>
                        </div>

                        <div style="display: flex; gap: 12px; margin-top: 30px;">
                            <a href="/About/UpdateAbout/@item.AboutId" style="text-decoration: none; padding: 12px 30px; background: #1d1d1f; color: white; border-radius: 12px; font-weight: 700; font-size: 14px; transition: 0.3s;">Düzenle</a>
                            <a href="/About/DeleteAbout/@item.AboutId" onclick="return confirm('Silmek istediğine emin misin?')" style="text-decoration: none; padding: 12px 30px; background: #fff1f0; color: #ff3b30; border-radius: 12px; font-weight: 700; font-size: 14px;">Sil</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<script>
    function handleCreateClick() {
        const alreadyExists = @hasProfile.ToString().ToLower();

        if (alreadyExists) {
            alert("⚠️ Dikkat: Zaten oluşturulmuş bir profiliniz var. Sadece bir adet 'Hakkımda' profili oluşturabilirsiniz. Lütfen mevcut profili düzenleyin.");
        } else {
            window.location.href = "/About/CreateAbout";
        }
    }
</script>